<% participations.each do |participation| %>
  <div class="card-product-wrapper">
    <div class="card-product mt-2">
      <%= link_to quest_path(participation.quest) do %>
        <%= cl_image_tag(participation.quest.photo.key, crop: :fill) %>
      <% end %>
      <div class="card-product-infos d-flex flex-column flex-grow-1">
        <h6> Quête : <%= participation.quest.title %></h6>
        <h6> Score: <%= participation.quest.points %> points</h6>
      </div>
      <div class="card-product-actions pr-4">
        <div class="mx-4">
          <%= link_to participation_finish_participation_path(participation), method: :patch, remote: true do %>
            <button type="button" class="btn btn-success">J'ai réussi mon challenge !</button>
          <% end %>
        </div>
        <div class="mx-5 my-2">
          <%= link_to "🐎 La quête ne me plait plus", participation_path(participation), method: :delete, remote: true, class: "btn-delete", data: { confirm: "Êtes-vous certain de vouloir supprimer cette quête ?" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
