                <h2><%= quest.title %></h2>
                <p><%= quest.truncate_content %></p>
              </div>
              <h3 class="card-quest-points"><%= quest.points %> pts</h3>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card color-level-3">
    <div class="card-header" id="headingThree">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          <div class="title-quest-level">
            Level 3
          </div>
        </button>
      </h2>
    </div>
