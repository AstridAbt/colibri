<div class="container-fluid">
  <div class="row">
    <div class="titre_1 w-100">
      <div class="quest-image" style="background: url('<%= cl_image_path @quest.photo.key , alt: "alttext" %>')">
        <p class="score m-0"><span><%= @quest.points %></span> pts</p>
      </div>
      <div class="title_quest m-2">
        <h1>
          <%= @quest.title %>
        </h1>
        <br>
      </div>
    </div>
    <h4><em>Pourquoi réaliser cette quête ?</em> </h4>
    <div class="description_quest m-2">
      <p>
        <i class="fas fa-tree"></i>
        <%= @quest.content %>
      </p>
    </div>
    <div class="description_quest m-2">
      <p>
        <i class="fab fa-pagelines"></i>
        <%= @quest.content_2 %>
      </p>
    </div>
    <% if @quest.content_3 %>
      <div class="description_quest m-2">
        <p>
          <i class="fas fa-leaf"></i>
          <%= @quest.content_3 %>
        </p>
      </div>
      <% end %>
  </div>
  <div class="mx-auto" style="width: 200px;">
    <%= simple_form_for([@quest, @participation]) do |f| %>
      <%= f.submit "Accepter cette quête !", class: 'btn-success mb-2' %>
    <% end %>
  </div>
  <div class="mx-auto" style="width: 200px;">
    <%= simple_form_for([@quest, @participation]) do |f| %>
      <i class="fas fa-angle-left"></i>
      <%= link_to 'Revenir aux quêtes', quests_path(quest_level: @quest.points), class: 'comeback' %>
    <% end %>
  </div>

    <div class="list-group">
      <h3>Regardez les reviews de cette quête :</h3>
      <% @quest.reviews.each do |review| %>
      <div class="list-group-item">
        <h5>Posté par : <%= review.user.username %></h5>
        <p>Review : <%= review.content %></p>
      </div>
      <% end %>
    </div>
</div>
